<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RequestFragment">

    <FrameLayout
        android:id="@+id/fragment_request"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/neo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Lütfen Seçim Yapınız !!"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnSİkayet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:text="Neoverde Şikayet"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTalep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:text="Neoverde Talep"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btnSİkayet"
        app:layout_constraintStart_toStartOf="@+id/btnSİkayet"
        app:layout_constraintTop_toBottomOf="@+id/btnSİkayet" />

    <Button
        android:id="@+id/insta"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="200dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/insta"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/btnTalep"
        app:layout_constraintStart_toStartOf="@+id/btnTalep"
        app:layout_constraintTop_toBottomOf="@+id/btnTalep" />

    <Button
        android:id="@+id/twit"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/tiwt"
        app:layout_constraintEnd_toEndOf="@+id/btnTalep"
        app:layout_constraintStart_toStartOf="@+id/btnTalep"
        app:layout_constraintTop_toBottomOf="@+id/btnTalep" />

    <Button
        android:id="@+id/face"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/face"
        app:layout_constraintEnd_toEndOf="@+id/btnTalep"
        app:layout_constraintStart_toStartOf="@+id/btnTalep"
        app:layout_constraintTop_toBottomOf="@+id/btnTalep" />


</androidx.constraintlayout.widget.ConstraintLayout>